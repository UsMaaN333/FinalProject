@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid px-0">
        <a class="navbar-brand" href="#">
            <img src="/img/juta_logo_wh.png" alt="Logo" width="120" height="50" class="d-inline-block align-text-top">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item px-2">
                    <a class="nav-link active" aria-current="page" @onclick="HomePage">Home</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" aria-current="page" @onclick="ProductPage">Products</a>
                </li>
                <li class="nav-item px-2">
                    <a class="nav-link" aria-current="page" @onclick="ContactPage">ContactUs</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <LoginDisplay/>
            </ul>
        </div>
    </div>
</nav>

@code {
    private void HomePage()
    {
        NavigationManager.NavigateTo("/");
    }
    private void ProductPage()
    {
        NavigationManager.NavigateTo("/products");
    }
    private void ContactPage()
    {
        NavigationManager.NavigateTo("/contact");
    }
    private void CartPage()
    {
        NavigationManager.NavigateTo("/cart");
    }
    private void SignPage()
    {
        NavigationManager.NavigateTo("/signup");
    }
    private void LogPage()
    {
        NavigationManager.NavigateTo("/login");
    }
}
